#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# fail fast
set -e

# debug
# set -x

# parse and derive params
BUILD_DIRA=$0
echo $BUILD_DIRA
BUILD_DIR=$1
echo $BUILD_DIR
CACHE_DIR=$2
echo $CACHE_DIR
LP_DIR=`cd $(dirname $0); cd ..; pwd`

function error() {
  echo " !     $*" >&2
  exit 1
}

function topic() {
  echo "-----> $*"
}

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}


topic "Reading Copyfile"

echo $BUILD_DIR
ls $BUILD_DIR
cat $BUILD_DIR/Copyfile

for COPYSPEC in $(cat $BUILD_DIR/Copyfile); do
    SOURCE_FILE=$(echo $COPYSPEC | awk -F':' '{print $1}')
    DEST=$(echo $COPYSPEC | awk -F':' '{print $2}')
    echo $DEST
    topic "Copying $SOURCE_FILE to $DEST"
    cat $BUILD_DIR/$SOURCE_FILE
    mkdir -p $(dirname ${DEST})
    cat $BUILD_DIR/$SOURCE_FILE > $DEST
    cat $DEST
done
